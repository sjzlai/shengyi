- var icons = ["icon-twitter",  "icon-github", 'icon-dribbble']

include ../public/html/meta.jade
    <!-- Magnific Popup -->
    link(href="css/magnific-popup.css")
    <!-- Owl Carousel  -->
    link(href="css/owl.carousel.min.css")
    link(rel="stylesheet", type="text/css",href="../../rev/public/css/owl.theme.default.min.css")
    <!-- Modernizr JS -->
    link(rel="stylesheet", type="text/css", href="../../rev/dest/css/index/css/index.scss")
